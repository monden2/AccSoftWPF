<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AccSoftWPF"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="Raleway">pack://application;,,,/Resources/Fonts/#Raleway</FontFamily>
    <FontFamily x:Key="RalewayThin">pack://application;,,,/Resources/Fonts/#Raleway Thin</FontFamily>
    <FontFamily x:Key="RalewayBlack">pack://application;,,,/Resources/Fonts/#Raleway Black</FontFamily>
    <FontFamily x:Key="RalewayBold">pack://application;,,,/Resources/Fonts/#Raleway Bold</FontFamily>
    <FontFamily x:Key="FontAwesome">pack://application;,,,/Resources/Fonts/#FontAwesome</FontFamily>
    
    <Style TargetType="{x:Type Control}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource Raleway}"/>
    </Style>
    
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseStyle}"/>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseStyle}"/>

    <system:Double x:Key="FontSizeSmall">10</system:Double>
    <system:Double x:Key="FontSizeRegular">12</system:Double>
    <system:Double x:Key="FontSizeMedium">16</system:Double>
    <system:Double x:Key="FontSizeLarge">24</system:Double>
</ResourceDictionary>